<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".FirstQuestion">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <!-- Question 1 -->

        <!-- Submit button -->

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="How would you rate your current mental health?"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/rg_question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/rb_question1_answer1"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:button="@drawable/custom_radiobutton"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:textSize="16dp"
                android:text="I take time for myself." />

            <RadioButton
                android:id="@+id/rb_question1_answer2"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:button="@drawable/custom_radiobutton"
                android:paddingStart="10dp"
                android:textSize="16dp"
                android:text="I reach out to friends or family." />

            <RadioButton
                android:id="@+id/rb_question1_answer3"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:button="@drawable/custom_radiobutton"
                android:paddingStart="10dp"
                android:textSize="16dp"
                android:text="I exercise or participate in physical activities." />

            <RadioButton
                android:id="@+id/rb_question1_answer4"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:button="@drawable/custom_radiobutton"
                android:paddingStart="10dp"
                android:textSize="16dp"
                android:text="I engage in creative outlets (art, music, writing, etc.)." />
        </RadioGroup>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="17dp"
            android:layout_marginLeft="15dp"
            app:cornerRadius = "15dp"
            android:text="Next" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>